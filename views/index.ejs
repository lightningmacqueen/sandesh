<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ShoeShop</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;800&display=swap" rel="stylesheet" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-black sticky-top shadow-sm">
      <div class="container">
        <a class="navbar-brand fw-bold text-uppercase" href="/">ShoeShop</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navMenu">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a class="nav-link" href="/shop">Shop</a></li>
            <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero d-flex align-items-center text-white">
      <div class="container text-center">
        <h1 class="display-2 fw-bold">Unleash Your Style</h1>
        <p class="lead">Performance meets personality. Discover shoes built for speed, style, and comfort.</p>
        <a href="/shop" class="btn btn-light btn-lg mt-3 px-5 py-3">Shop Now</a>
      </div>
    </section>

    <!-- Product Grid -->
    <section class="container py-5">
      <div class="row gy-4">
        <!-- Product Card: AirMax 2025 -->
        <div class="col-md-4">
          <div class="card product-card h-100">
            <img src="/shoespic/ryan-plomp-jvoZ-Aux9aw-unsplash.jpg" class="card-img-top" alt="AirMax 2025" />
            <div class="card-body text-center">
              <h5 class="card-title">AirMax 2025</h5>
              <p class="card-text">Rs. 8,999</p>
              <form action="/add-to-cart" method="POST">
                <input type="hidden" name="id" value="airmax2025" />
                <button type="submit" class="btn btn-dark w-100">Shop Now</button>
              </form>
            </div>
          </div>
        </div>

        <!-- Product Card: Runner One -->
        <div class="col-md-4">
          <div class="card product-card h-100">
            <img src="/shoespic/aman-jakhar-0a5o_CalpWE-unsplash.jpg" class="card-img-top" alt="Runner One" />
            <div class="card-body text-center">
              <h5 class="card-title">Runner One</h5>
              <p class="card-text">Rs. 10,999</p>
              <a href="/shoes" class="btn btn-dark w-100">Shop Now</a>
            </div>
          </div>
        </div>

        <!-- Product Card: Phantom X -->
        <div class="col-md-4">
          <div class="card product-card h-100">
            <img src="/shoespic/sanju-pandita-36MiHf2KKr8-unsplash.jpg" class="card-img-top" alt="Phantom X" />
            <div class="card-body text-center">
              <h5 class="card-title">Phantom X</h5>
              <p class="card-text">Rs. 23,999</p>
              <a href="/shoes" class="btn btn-dark w-100">Shop Now</a>
            </div>
          </div>
        </div>

        <!-- Product Card: Jordan Fly -->
        <div class="col-md-4">
          <div class="card product-card h-100">
            <img src="/shoespic/raphael-nogueira-qHlsndlzXds-unsplash.jpg" class="card-img-top" alt="Jordan Fly" />
            <div class="card-body text-center">
              <h5 class="card-title">Jordan Fly</h5>
              <p class="card-text">Rs. 90,999</p>
              <a href="/shoes" class="btn btn-dark w-100">Shop Now</a>
            </div>
          </div>
        </div>

        <!-- Product Card: Puma Bounce -->
        <div class="col-md-4">
          <div class="card product-card h-100">
            <img src="/shoespic/sanju-pandita-36MiHf2KKr8-unsplash.jpg" class="card-img-top" alt="Puma Bounce" />
            <div class="card-body text-center">
              <h5 class="card-title">Puma Bounce</h5>
              <p class="card-text">Rs. 6,999</p>
              <a href="/shoes" class="btn btn-dark w-100">Shop Now</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-black text-white text-center py-4">
      <p class="mb-0">&copy; 2025 ShoeShop. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
